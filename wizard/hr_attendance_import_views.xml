<odoo>
  <!-- Formulario del wizard -->
  <record id="view_hr_attendance_import_form" model="ir.ui.view">
    <field name="name">hr.attendance.import.form</field>
    <field name="model">hr.attendance.import</field>
    <field name="arch" type="xml">
      <form string="Importar Asistencias">
        <sheet>
          <group>
            <field name="file_data" filename="file_name" widget="binary"/>
            <field name="file_name"/>
          </group>
          <footer>
            <button string="Importar" type="object" name="action_import" class="btn-primary"/>
            <button string="Cancelar" class="btn-secondary" special="cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Acción para levantar el wizard -->
  <record id="action_hr_attendance_import" model="ir.actions.act_window">
    <field name="name">Importar Asistencias</field>
    <field name="res_model">hr.attendance.import</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <!-- Opción de menú bajo Asistencias -->
  <menuitem id="menu_hr_attendance_import"
            name="Importar Asistencias"
            parent="hr_attendance.menu_hr_attendance_root"
            action="action_hr_attendance_import"/>
</odoo>
