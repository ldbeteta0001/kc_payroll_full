<odoo>
    <!-- Vista del Wizard: formulario para generar el Excel -->
    <record id="view_wizard_payslip_excel_form" model="ir.ui.view">
        <field name="name">wizard.payslip.excel.form</field>
        <field name="model">wizard.payslip.excel</field>
        <field name="arch" type="xml">
            <form string="Generar Boletas de Pago Excel">
                <group>
                    <!-- El usuario selecciona manualmente el Lote de Nómina -->
                    <field name="payslip_run_id" placeholder="Seleccione el Lote de Nómina"/>
                </group>
                <footer>
                    <button name="action_generate_excel"
                            type="object"
                            string="Generar Excel"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el wizard en modo 'popup' -->
    <record id="action_wizard_payment_excel" model="ir.actions.act_window">
        <field name="name">Generar Boletas de Pago Excel</field>
        <field name="res_model">wizard.payslip.excel</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            id="menu_l10n_hn_payroll_payment_excel"
            name="Boletas de Pago"
            parent="hr_payroll.menu_hr_payroll_report"
            action="action_wizard_payment_excel"
            sequence="14"/>

</odoo>
