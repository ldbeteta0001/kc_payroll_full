<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_nomina_wizard" model="ir.ui.view">
        <field name="name">import.nomina.wizard.form</field>
        <field name="model">hr.payslip.import.input</field>
        <field name="arch" type="xml">
            <form string="Importar Otras Entradas">
                <group>
                    <group>
                        <field name="file"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <group>
                        <field name="calcular_hoja"/>
                        <field name="batch_id"/>
                    </group>
                    <separator string="Formato de Archivo" colspan="4"/>
                    <div>
                        <p class="o_form_label">Formato:</p>
                        <p>1. default_code: Referencia interna del empleado</p>
                        <p>2. code: Código de la regla salarial</p>
                        <p>3. amount: Importe</p>
                    </div>
                </group>
                <footer>
                    <button string="Importar" type="object" name="import_file" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_nomina_wizard" model="ir.actions.act_window">
        <field name="name">Importar Nómina</field>
        <field name="res_model">hr.payslip.import.input</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            id="menu_hr_payroll_imports"
            name="Importación"
            parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"
            sequence="70"/>
    <menuitem
            id="menu_hr_payslip_import_input"
            name="Importar Otras Entradas"
            parent="menu_hr_payroll_imports"
            sequence="28"
            action="action_import_nomina_wizard"/>
</odoo>